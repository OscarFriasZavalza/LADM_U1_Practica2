<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#5CCDDC39"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="60dp"
       >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/item_imagen"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:id="@+id/tipoplatillo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@+id/item_imagen"
            android:layout_toRightOf="@+id/item_imagen"
            android:text="Entradas"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nombreplatillo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tipoplatillo"
            android:layout_marginEnd="@+id/item_imagen"
            android:layout_toRightOf="@+id/item_imagen"
            android:text="Pozole"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreplatillo"
            android:layout_marginEnd="@+id/item_imagen"
            android:layout_toRightOf="@+id/item_imagen"
            android:text="$60.00"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>